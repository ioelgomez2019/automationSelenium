# ============================================================
#   CONFIGURACIÓN DE AMBIENTES - AutomationCorebank
#   Archivo: environment.config
# ============================================================

# ---- AMBIENTE ACTIVO ----
# Opciones: dev | qa | staging | prod
environment=qa

# ---- URLs POR AMBIENTE ----
url.dev=http://localhost:3000
url.qa=https://qa.corebank.com
url.staging=https://staging.corebank.com
url.prod=https://www.corebank.com

# ---- CREDENCIALES QA ----
# ⚠️  En producción usar variables de entorno o vault
credentials.qa.user=admin@corebank.com
credentials.qa.password=Admin123*

credentials.dev.user=dev@corebank.com
credentials.dev.password=Dev123*

# ---- CONFIGURACIÓN DEL NAVEGADOR ----
# Opciones: chrome | firefox | edge
browser=chrome
browser.headless=false
browser.maximized=true

# ---- TIEMPOS DE ESPERA (segundos) ----
timeout.implicit=10
timeout.explicit=20
timeout.pageload=30
timeout.script=15

# ---- CONFIGURACIÓN DE REPORTES ----
reports.path=target/reports
reports.screenshots=true
reports.screenshots.on.failure=true
reports.screenshots.path=target/screenshots

# ---- CONFIGURACIÓN DE GRID (opcional) ----
grid.enabled=false
grid.url=http://localhost:4444/wd/hub
